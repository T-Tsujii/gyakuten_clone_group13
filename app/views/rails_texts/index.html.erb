<div class="cover text-center">
  <div class="rails_texts-wrapper">
  <div class="contents-title">
      <%= render "layouts/search_rails_text" %>
    <h2>テキスト教材</h2>
  </div>

<div class="row">
    <% @rails_texts.each do |rails_text| %>
      <div class="col-md-4 col-sm-6 col-xs-12">
        <%= link_to rails_text_path(rails_text.id), {:target => "_blank"} do %>
          <h3><%= rails_text.title %></h3>
          <p><%= "【#{rails_text.genre}】" %></p>
          <% end %>
     </div>
     <% end %>
    </div>
  </div>
  </div>
